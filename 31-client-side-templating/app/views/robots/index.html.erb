<h1>Robots</h1>

<div id="robot-container" class="robot-box">
  <% @robots.each do |robot| %>
    <article class="robot">
      <%= link_to robot_url(robot) do %>
        <h2><%= robot.name %></h2>
      <% end %>
    </article>
  <% end %>
</div>

<aside id="robot-details-container" class="robot-box">
  <h2>Robot Details</h2>
  <div id="robot-details"></div>
</aside>

<script id="robot-template" type="text/x-handlebars-template">
  <img src="http://robohash.org/{{address}}">
  <dl>
    <dt>Name</dt>
    <dd>{{name}}</dd>

    <dt>IP Address</dt>
    <dd>{{address}}</dd>

    <dt>Lasers</dt>
    <dd>{{lasers}}</dd>

    <dt>Japanese</dt>
    <dd>{{japanese}}</dd>
  </dl>
</script>
